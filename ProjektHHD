#include <iostream>
using namespace std;

class bestellung {                            //Klass Definition
	private : 
		int zahl_essen1;                          //Attribute
		int zahl_essen2;
		int zahl_essen3;
		int zahl_essen4;
		int zahl_essen5;
		int zustand=1; 								
	public :
		void setzeStueckzahl1 (int ein);            //Methode
		void setzeStueckzahl2 (int ein);
		void setzeStueckzahl3 (int ein);
		void setzeStueckzahl4 (int ein);
		void setzeStueckzahl5 (int ein);
		int zeigStueckzahl1 (void);
		int zeigStueckzahl2 (void);
		int zeigStueckzahl3 (void);
		int zeigStueckzahl4 (void);
		int zeigStueckzahl5 (void);
		int zeigZustand (void);
};

// Methodendefinition
void bestellung:: setzeStueckzahl1 (int ein) {    
	this -> zahl_essen1=ein; }
void bestellung:: setzeStueckzahl2 (int ein) {
	this -> zahl_essen2=ein; }
void bestellung:: setzeStueckzahl3 (int ein) {
	this -> zahl_essen3=ein; }
void bestellung:: setzeStueckzahl4 (int ein) {
	this -> zahl_essen4=ein; }
void bestellung:: setzeStueckzahl5 (int ein) {
	this -> zahl_essen5=ein; }

int bestellung:: zeigStueckzahl1 (void) {
	return zahl_essen1; }
int bestellung:: zeigStueckzahl2 (void) {
	return zahl_essen2; }
int bestellung:: zeigStueckzahl3 (void) {
	return zahl_essen3; }	
int bestellung:: zeigStueckzahl4 (void) {
	return zahl_essen4; }
int bestellung:: zeigStueckzahl5 (void) {
	return zahl_essen5; }

int bestellung::zeigZustand (void) {
	return zustand;}
		
int main (void) {
	int a=3, b=4, c=2, d=1, e=5;	 // Bestellung St√ºckzahl werden von Kunde-Code bekommen. 
	bestellung Bestellung1, Bestellung2, Bestellung3, Bestellung4, Bestellung5;                  // Instanzierung Objekte

	Bestellung1.setzeStueckzahl1(a);
	Bestellung1.setzeStueckzahl2(b);
	Bestellung1.setzeStueckzahl3(c);
	Bestellung1.setzeStueckzahl4(d);
	Bestellung1.setzeStueckzahl5(e);
	
	Bestellung2.setzeStueckzahl1(a);
	Bestellung2.setzeStueckzahl2(b);
	Bestellung2.setzeStueckzahl3(c);
	Bestellung2.setzeStueckzahl4(d);
	Bestellung2.setzeStueckzahl5(e);
	
	Bestellung3.setzeStueckzahl1(a);
	Bestellung3.setzeStueckzahl2(b);
	Bestellung3.setzeStueckzahl3(c);
	Bestellung3.setzeStueckzahl4(d);
	Bestellung3.setzeStueckzahl5(e);
	
	Bestellung4.setzeStueckzahl1(a);
	Bestellung4.setzeStueckzahl2(b);
	Bestellung4.setzeStueckzahl3(c);
	Bestellung4.setzeStueckzahl4(d);
	Bestellung4.setzeStueckzahl5(e);
	
	Bestellung5.setzeStueckzahl1(a);
	Bestellung5.setzeStueckzahl2(b);
	Bestellung5.setzeStueckzahl3(c);
	Bestellung5.setzeStueckzahl4(d);
	Bestellung5.setzeStueckzahl5(e);
	
	cout <<"\nBestellungszustand : " <<endl;            //Zustand
	cout <<"(1) Bestellt  , (2) in Bearbeitung,  (3) Fertig! Abholbar \n";
	cout << "\n<Bestellungsliste>\n";                             //Bestellungsliste
	cout << "Bestellung     Stueckzahl                                             Zustand\n";
	cout << "1.             "<<Bestellung1.zeigStueckzahl1()<<"*essen1,  "<< Bestellung1.zeigStueckzahl2()<<"*essen2,  " <<Bestellung1.zeigStueckzahl3()<<"*essen3,  "<<Bestellung1.zeigStueckzahl4()<<"*essen4,  "<<Bestellung1.zeigStueckzahl5()<<"*essen5"<< "   " << Bestellung1.zeigZustand() <<endl;
	cout << "2.             "<<Bestellung2.zeigStueckzahl1()<<"*essen1,  "<< Bestellung2.zeigStueckzahl2()<<"*essen2,  " <<Bestellung2.zeigStueckzahl3()<<"*essen3,  "<<Bestellung2.zeigStueckzahl4()<<"*essen4,  "<<Bestellung2.zeigStueckzahl5()<<"*essen5"<< "   " << Bestellung2.zeigZustand() <<endl;
	cout << "3.             "<<Bestellung3.zeigStueckzahl1()<<"*essen1,  "<< Bestellung3.zeigStueckzahl2()<<"*essen2,  " <<Bestellung3.zeigStueckzahl3()<<"*essen3,  "<<Bestellung3.zeigStueckzahl4()<<"*essen4,  "<<Bestellung3.zeigStueckzahl5()<<"*essen5"<< "   " << Bestellung3.zeigZustand() <<endl;
	cout << "4.             "<<Bestellung4.zeigStueckzahl1()<<"*essen1,  "<< Bestellung4.zeigStueckzahl2()<<"*essen2,  " <<Bestellung4.zeigStueckzahl3()<<"*essen3,  "<<Bestellung4.zeigStueckzahl4()<<"*essen4,  "<<Bestellung4.zeigStueckzahl5()<<"*essen5"<< "   " << Bestellung4.zeigZustand() <<endl;
	cout << "5.             "<<Bestellung5.zeigStueckzahl1()<<"*essen1,  "<< Bestellung5.zeigStueckzahl2()<<"*essen2,  " <<Bestellung5.zeigStueckzahl3()<<"*essen3,  "<<Bestellung5.zeigStueckzahl4()<<"*essen4,  "<<Bestellung5.zeigStueckzahl5()<<"*essen5"<< "   " << Bestellung5.zeigZustand() <<endl;
	
	return 0;
}

